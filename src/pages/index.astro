---
import Tour from '../components/Tour.astro';
import SpeechButton from '../components/SpeechButton.jsx';
import SpeechButtonButSvelte from '../components/SpeechButtonButSvelte.svelte';

let title = '9 Speech';

const data = [
  {label: "สวัสดีครับ", filename: "sawatdeekrub", type: "React"},
  {label: "ท่านสมาชิก", filename: "02-thansamachik", type: "Svelte"},
]

---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/style/global.css">
    <link rel="stylesheet" href="/style/home.css">

    <style>
        header {
            display: flex;
            flex-direction: column;
            gap: 1em;
            max-width: min(100%, 68ch);
        }
    </style>
</head>
<body>
    <main>
        <header>
            <div>
                <h1 class="text-6xl mb-8">9 Speech</h1>
            </div>
        </header>

        <div class="flex">
          {data.map(({label, filename, type}) => {
            if (type === 'React') {
              return <SpeechButton client:visible {label} {filename} />
            } else if (type === 'Svelte') {
              return <SpeechButtonButSvelte client:visible {label} {filename} />
            } else {
              return <SpeechButton client:visible {label} {filename} />
            }
          })}
        </div>
    </main>
</body>
</html>
